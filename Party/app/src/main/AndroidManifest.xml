<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="musicplayer.party">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".spotifyService.InstructionActivity" />
        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".spotifyService.SpotifyRetrieveArtists" />
        <activity android:name=".PartyHome" />
        <activity android:name=".spotifyService.SpotifyRetrieveTracks" />
        <activity android:name=".personalization.playlistUpdate.CreatePlaylistService" />
        <activity android:name=".personalization.playlistUpdate.AddTracksService" />
        <activity android:name=".mediaPlayer.PlayTracksActivity"></activity>

        <!-- Bezirk Activity-->
        <activity android:name=".bezirk.BezirkActivity" />
        <!-- Bezirk Intent Receiver for receiving messages from the Bezirk Application-->
        <receiver android:name="com.bezirk.middleware.proxy.android.IntentMessageReceiver">
            <intent-filter>
                <action android:name="com.bosch.upa.uhu.broadcast" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>